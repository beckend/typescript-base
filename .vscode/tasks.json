{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypesScript all problems in output",
      "command": "./node_modules/.bin/tsc",
      "args": ["--noEmit", "-p", "."],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent"
      },
      "type": "shell"
    }
  ]
}
